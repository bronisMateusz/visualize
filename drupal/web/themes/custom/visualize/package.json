{
  "name": "visualize-theme",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "format": "prettier --write scss js ; stylelint --fix scss ; eslint --fix js",
    "lint": "npm-run-all --continue-on-error lint:prettier lint:stylelint lint:eslint",
    "lint:prettier": "prettier --no-error-on-unmatched-pattern --check scss js",
    "lint:stylelint": "stylelint scss",
    "lint:eslint": "eslint --no-error-on-unmatched-pattern js",
    "upgrade": "yarn yarn-upgrade-all"
  },
  "devDependencies": {
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-yml": "^1.4.0",
    "prettier": "^2.8.3",
    "rollup-plugin-multi-input": "^1.3.3",
    "sass": "^1.58.0",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "vite": "^4.1.1",
    "vite-plugin-live-reload": "^3.0.1",
    "yarn-upgrade-all": "^0.7.2"
  }
}
